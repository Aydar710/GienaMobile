<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cvVatabeRoot"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/ivVatabe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_vatabe_shock"
        app:layout_constraintStart_toEndOf="@id/tvSpeech"
        app:layout_constraintTop_toBottomOf="@id/tvSpeech" />

    <TextView
        android:id="@+id/tvSpeech"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_bubble"
        android:gravity="center"
        android:paddingHorizontal="12dp"
        android:paddingVertical="14dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Что ты наделал??!!" />

</androidx.constraintlayout.widget.ConstraintLayout>